{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "es6",
        "esModuleInterop": true,
        "target": "ES2015",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "allowJs": true,
    },
    "lib": ["es2015"],
    "include": ["./src/*.ts"],
    "typedocOptions": {
        "exclude": "src/index.*",
        "entryPoints": ["src/pixelstreamingfrontend-ui.ts"],
        "sort": ["enum-value-ascending", "required-first", "source-order"],
        "out": "docs",
        "theme": "default",
        "hideGenerator": "true"
    }
}
